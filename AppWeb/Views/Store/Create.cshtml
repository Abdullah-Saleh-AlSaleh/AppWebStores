@model AppWeb.Models.Store

@{
    ViewBag.Title = "إضافة المنتج";
}

<h2>@ViewBag.er</h2>



@using (Html.BeginForm("Create", "Store", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


<h2>إضافة المنتج</h2>

    <div class="form-horizontal">
